type IcdCodes {
  id: ID! @id
  icdCode: String! @unique
  commonName: String!
}

type IcdSubCodes {
  id: ID! @id
  icdSubCode: String! @unique
  scientificName: String!
  icdCode: IcdCodes!
}

type Admin {
  id: ID! @id
  email: String! @unique
  password: String!
}

type MedicalPractitioner {
  id: ID! @id
  mpId: Int! @unique
  lastName: String!
  firstName: String!
  middleName: String!
  email: String! @unique
  password: String!
  dob: DateTime!
  sex: String!
  address: String!
  degree: String!
  field: String!
  hospital: Hospital!
  registeredAt: DateTime! @createdAt
  accessiblePatients: [Patient]
}

type Hospital {
  id: ID! @id
  name: String!
  address: String!
  city: String!
  district: String!
  pincode: Int!
  countryCode: Int!
}

type Patient {
  id: ID! @id
  lastName: String!
  firstName: String!
  middleName: String!
  motherName: String!
  dob: DateTime!
  bloodGroup: String!
  sex: String!
  religion: String!
  maritalStatus: String!
  primaryLanguage: String!
  birthPlace: String!
  address: String!
  countryCode: Int!
  occupation: String!
  contact1: String!
  contact2: String!
  email: String! @unique
  password: String!
  socioEconomicStatus: String!
  immunizationStatus: String!
  allergyStatus: Boolean!
  organDonorStatus: Boolean!
  PMH: String!
  DHx: String!
  Ca: String!
  IDDM: String!
  NIDDM: String!
  MI: String!
  AF: String!
  registeredAt: DateTime! @createdAt
  careProvider: CareProvider
  insurance: Insurance
  patientCase: PatientCase
  accessRequests: [AccessRequest!]!
}

type AccessRequest {
  id: ID! @id
  medicalPractitionerFirstName: String!
  medicalPractitionerLastName: String!
  medicalPractitionerId: String!
}

type PatientCase {
  id: ID! @id
  mp: MedicalPractitioner!
  icdCode: IcdCodes!
  icdSubCode: IcdSubCodes!
  hospital: Hospital!
  HPC: String!
  MoI: String
  DnV: String
  clinicNote: String!
  diagnosisType: String!
  currentClinicalStatus: String!
  createdAt: DateTime! @createdAt
  records: [PatientRecord!]!
}

type PatientRecord {
  id: ID! @id
  visitNo: Int!
  mp: MedicalPractitioner!
  hospital: Hospital!
  encounterDate: DateTime! @createdAt
  observation: String!
  Tx: String!
  suggesstions: String
  cevsSp: Int!
  cevsDp: Int!
  cePr: Int!
  ceRr: Int!
  ceHeight: Int!
  ceWeight: Int!
  medication: String!
  advice: String
  query: String
  followUpObservation: String
}

type CareProvider {
  id: ID! @id
  firstName: String!
  lastName: String!
  middleName: String!
  address: String!
  cityId: Int!
  stateId: Int!
  pinCode: Int!
  countryCode: Int!
  contact1: String!
  email: String!
}

type Insurance {
  id: ID! @id
  status: Boolean!
  companyName: String!
}